- name: Install and configure mysql on target2
  hosts: target2
  become: yes
  vars:
    mysql_root_password: secret
  tasks:
    - name: Install mysql
      apt:
        name: mysql-server
        state: present
        update_cache: yes
    - name: Secure mysql installation
      community.mysql.mysql_secure_installation:
        login_password: "{{ mysql_root_password }}"
        user: root
        login_host: localhost
        login_user: root
        login_port: 3306
    - name: Enable mysql service
      service:
        name: mysql
        state: started
        enabled: yes
    - name: Install ufw
      apt:
        name: ufw
        state: present
    - name: Enable ufw
      community.general.ufw:
        state: enabled
    - name: Allow ssh on ufw
      community.general.ufw:
        rule: allow
        port: 22
        proto: tcp
    - name: Allow mysql on ufw
      community.general.ufw:
        rule: allow
        port: 3306
        proto: tcp
