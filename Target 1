- name: Install and configure apache2 on target1
  hosts: target1
  become: yes
  tasks:
    - name: Install apache2
      apt:
        name: apache2
        state: present
        update_cache: yes
    - name: Enable apache2 service
      service:
        name: apache2
        state: started
        enabled: yes
    - name: Install ufw
      apt:
        name: ufw
        state: present
    - name: Enable ufw
      community.general.ufw:
        state: enabled
    - name: Allow ssh on ufw
      community.general.ufw:
        rule: allow
        port: 22
        proto: tcp
    - name: Allow http on ufw
      community.general.ufw:
        rule: allow
        port: 80
        proto: tcp
